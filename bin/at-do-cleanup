#!/usr/bin/env ruby
#------------------------------------------------------------------------------
# Overview
#
# This script is designed to delete duplicate DigitalObject records from 
# Archivist's Toolkit databases.
#
# Database connection parameters can be specified via the following
# environment variables:
#       AT_DB_HOST
#       AT_DB_USER
#       AT_DB_PASSWORD
#       AT_DB_DATABASE
#
# e.g.,
#
#   $ export AT_DB_HOST='localhost'
#   $ export AT_DB_USER='root'
#   $ export AT_DB_PASSWORD=''
#   $ export AT_DB_DATABASE='AT_BAZ_QUUX'
#
#------------------------------------------------------------------------------
require 'mysql2'
require_relative '../lib/at_do_cleanup'

include ATDOCleanup

config = Config.new

# connect to db
client = Mysql2::Client.new(host:     config.host,
                            username: config.user,
                            password: config.pass,
                            database: config.database)

dups = client.query(Queries.dup_query)

dups.each do |d|
  dupe = DigitalObject.new(d)
  authoritative_record = client.query(Queries.authoritative_record_query(mets_id: dupe.send(METS_ID_ATTR)))
  unless authoritative_record.count == 1
    raise "ERROR: incorrect number of authoritative records (#{authoritative_record.count}) for metsIdentifier #{mets_id}"
  end
end
